@model FEM.Application.DTOS.FootballClubPlayerAddRequestModel

<style>
    .hide {
        display: none
    }
</style>

<h4>FootballClubPlayerAddRequestModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPlayer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="ClubId" value="@Model.ClubId" hidden class="form-control" />

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input id="is-new-player-checkbox" class="form-check-input" asp-for="IsNewPlayer" /> @Html.DisplayNameFor(model => model.IsNewPlayer)
                </label>
            </div>
            <div class="form-group" id="fbcplayer-id">
                <label asp-for="PlayerId" class="control-label"></label>
                <input asp-for="PlayerId" class="form-control" />
                <span asp-validation-for="PlayerId" class="text-danger"></span>
            </div>

            <div id="new-pl-inputs" class="hide">
                <div class="form-group">
                    <label asp-for="Player.Name" class="control-label"></label>
                    <input asp-for="Player.Name" class="form-control" />
                    <span asp-validation-for="Player.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Player.Birthdate" class="control-label"></label>
                    <input asp-for="Player.Birthdate" class="form-control" />
                    <span asp-validation-for="Player.Birthdate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    const isNewPlayer = document.getElementById("is-new-player-checkbox");
    const newPlayerInputs = document.getElementById("new-pl-inputs");
    const fcPlayerId = document.getElementById("fbcplayer-id");



    const isNewPlayerChangeHandler = (event) => {
        console.log(event.target.checked)

        if (isNewPlayer.checked) {
            newPlayerInputs.classList.remove("hide")
            fcPlayerId.classList.add("hide")
        } else {
            newPlayerInputs.classList.add("hide")
            fcPlayerId.classList.remove("hide")
        }

    }

    isNewPlayer.addEventListener("change", isNewPlayerChangeHandler);

</script>